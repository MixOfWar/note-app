{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noEmitOnError": true,
    "jsx": "react-jsx"
  },
  "files": ["src/main.tsx", "src/App.tsx", "src/utils/defaultData.ts", "src/utils/types.ts", "src/utils/useLocalStorage.tsx", "src/pages/EditNote.tsx", "src/pages/NewNote.tsx", "src/pages/NoteList.tsx", "src/components/EditTagsModal.tsx", "src/components/Note.tsx", "src/components/NoteCard.tsx", "src/components/NoteForm.tsx", "src/components/NoteLayout.tsx"],
  "include": ["src", "src/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
